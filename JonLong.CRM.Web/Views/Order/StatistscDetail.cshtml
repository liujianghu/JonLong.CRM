<script>
    var parentIndex = -1;
    var oldIndex = -1;
    function deleteOrder(id) {
        if (!confirm("This will delete this model from this bundle, are you sure?")) {
            return;
        }
        $.ajax({
            type: "POST",
            url: '@Url.Action("Delete") ',
            data: ({ id: id }),
            datatype: 'json',
            success: function (data) {
                if (data != 1) {
                    alert(data);
                    return;
                } else {
                    alert("Delete Success!");
                    window.location.href = '@Url.Action("Index")';
                }

            }
        });
    }

    function convertToOrder() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ConvertToOrder") ',
            data: ({ bundleNo: '@Model.BundleNo' }),
            datatype: 'json',
            success: function (data) {
                if (data != 1) {
                    alert(data);
                    return;
                } else {
                    window.location.href = '@Url.Action("Index")';
                }

            }
        });
    }

    function edit(index, id, pIndex) {
        var detailDiv = $("#edit" + pIndex + "_" + index);
        $.ajax({
            cache: false,
            type: "GET",
            url: "@Url.Action("Edit")",
            data: { "id": id },
            success: function (data) {
                if (editDivId != "") {
                    $("#edittr" + editDivId).hide();
                    $("#edit" + editDivId).html("");
                }
                detailDiv.html('');
                detailDiv.html(data);
                $("#edittr" + pIndex + "_" + index).show();
                editDivId = pIndex + "_" + index;
                //$("." + id).toggle();

            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert('Failed to retrieve detail.');
            }
        });
    }
    function cancel() {
        $("#edittr" + editDivId).hide();
        $("#edit" + editDivId).html("");
        return false;
    }
</script>